            </a>
}
else if (Model.Name == "cam2")
{
            <a href="#click" onclick="PlayAndClick(2)" class="ctrl" style="left: 255px; top: 120px;">

            </a>
        <a href="#click" onclick="PlayAndClick(1)"  class="ctrl" style="left: 415px; top: 130px;">

        </a>
        }
       
       
       
    </div>

    
    <script type="text/javascript">
    function PlayAndClick(out_id) {
        document.getElementById("myTune").play();
        $.get("http://82.209.194.198/oc?" + out_id);//82.209.194.198
        return true;
    }
    </script>



   

</div>