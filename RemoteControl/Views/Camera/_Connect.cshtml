@model  RemoteControl.Models.Camera

  
<div id="but">
    @{AjaxOptions ajaxOpts = new AjaxOptions()
      {
          UpdateTargetId = "but",
            
          Url = Url.Action("Disconnect", Model)
          
      };
    }
    @using (Ajax.BeginForm(ajaxOpts))
    {

        <input type="submit" class="btn btn-danger" value="Disconnect" name="waiting" />
    }


    <style>
        #box {
            position: absolute;
            z-index: 100;
            width: 700px;
            height: 500px;
            border: 0px solid red;
        }

        #cont {
            position: relative;
            width: 100%;
            height: 100%;
            border: 1px solid green;
        }

        .ctrl {
            text-align: center;
            background-image: none;
            width:50px;
            height:50px;
            display: inline;
            padding: 20px;
            border: 0px solid gray;
            color: blue;
            position: absolute;
        }
    </style>

    <audio id="myTune">
        <source src="@Url.Content("~/Content/click.mp3")">
    </audio>

  

    @*Хардкод проверки камеры,  нужно будет сделать свойства у контроллера: сколько кнопок у него и их позиции *@
    
    <div id="box">
       
                @if (Model.Name == "cam1")
{      @* Проверить href , чтобы не было переходa*@
