@model RemoteControl.Models.LANController

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>LANController</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("lan1")
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="col-md-12 col-md-offset-1">
            @Html.Label("Template: http : // [ip-adress] : [port] / [optionalParametrs] ", new { @style = "color:red" })
         </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ControllerPath, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ControllerPath", "http://192.168.100.61:1935/oc?", new { @style = "width:100%" })
                @Html.ValidationMessageFor(model => model.ControllerPath)
            </div>
        </div>
        <div>
            @Html.HiddenFor(model => model.UserManager)

        </div>


        <div>
            @Html.HiddenFor(model => model.UserOwner)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsPublic, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsPublic, new { @checked = "checked" })
                @Html.ValidationMessageFor(model => model.IsPublic)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsWork, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsWork, new { @checked = "checked" })
                @Html.ValidationMessageFor(model => model.IsWork)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
