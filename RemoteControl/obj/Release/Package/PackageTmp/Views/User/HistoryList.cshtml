@model PagedList.IPagedList<RemoteControl.Models.UserCamera>
@using PagedList.Mvc;
@{

    Layout = null;
}
<div id="content">
    <div class="col-md-12">
        <table class=" table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().StartUse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().EndUse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CommonTimeUse)
                </th>
                <th>
                    @Html.DisplayName("Camera")
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartUse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndUse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommonTimeUse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Camera.Name)
                    </td>

                </tr>
            }

        </table>
    </div>

    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    <div id="contentPager">
        @Html.PagedListPager(Model, page => Url.Action("HistoryList", new { page }))
    </div>

</div> 