@model PagedList.IPagedList<RemoteControl.Models.Camera>
@using PagedList.Mvc;
@{
    
    Layout = null;
}
<div id="content">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CameraPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category)
            </th>


            <th>
                @Html.DisplayName("UserManager")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().UserOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsWork)
            </th>
            <th>
                @Html.DisplayName("LanController")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CameraPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserManager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserOwner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPublic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsWork)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LANController.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    <br />

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    <div id="contentPager">
        @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
    </div>
</div> 